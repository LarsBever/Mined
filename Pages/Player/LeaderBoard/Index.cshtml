@page
@model Mined.Pages.Player.LeaderBoard.IndexModel
@using Mined.Utility

<div class="container p-3">
	<div class="row pt-4">
		<h2 class="text-primary">High Scores</h2>
	</div>
	<!--Add Score button-->
	@if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.InstructorRole))
	{
		<div class="col-6">
			<a asp-page="upsert" class="btn btn-primary">
				<i class="bi bi-plus-square"></i>
				Add new Score
			</a>
		</div>
	}
</div>

<br /><br/>

<!-- Category Table-->
<table class="table table-bordered table-striped" style="width:100%">
	<thread>
		<tr>
			<th>
				NickName
			</th>
			<th>
				Number Of Mistakes
			</th>
			<th>
				Score
			</th>
		</tr>
	</thread>
	<tbody>
		@{
			var orderScores = Model.Scores.OrderByDescending(s => s.PlayerScore);
		}
		@foreach(var obj in orderScores)
		{
		<tr>
			<td width="50">@obj.Nickname</td>
			<td width="50">@obj.NumberOfMistakes</td>
			<td width="50">@obj.PlayerScore</td>
				@if (User.IsInRole(SD.AdminRole) || User.IsInRole(SD.InstructorRole))
				{
					<td width="20">
						<div class="w-75 btn-group" role="group">
							<!-- UXO Edit button-->
							<a asp-page="Upsert" asp-route-id="@obj.Score_ID" class="btn btn-primary">
								<i class="bi bi-pencil-squaremx-2"></i>
								Edit
							</a>
							<!-- UXO delete button-->
							<a asp-page="Delete" asp-route-id="@obj.Score_ID" class="btn btn-danger mx-2">
								<i class="bi bi-trash"></i>
								Delete
							</a>
						</div>
					</td>
				}
		</tr>
		}
		@if (HttpContext.Session.GetInt32("SessionScoreId") != null)
		{
			<form method="post">
				<div class="form-group col md-6">
					<button type="submit" class="btn btn-primary" style="width:300px">Try again and improve my score</button>
				</div>
			</form>
			
		}
	</tbody>
</table>

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
	}
