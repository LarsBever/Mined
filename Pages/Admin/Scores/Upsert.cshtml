@page
@model Mined.Pages.Admin.Scores.UpsertModel

<div class="container-xl px-4 mt-4">
	<div asp-validation-summary="All"></div>
		<form method="post">		
			<input hidden asp-for="Score.Score_ID" />
				<div class="col-xl-12">
					<h2 class="text-bg-primary pl-3">
					@(Model.Score.Score_ID != 0 ? "Update" : "Add") Score
					</h2>

						<!-- Delete Score -->
						<div class="card mb-4">
							<div class="card-body">

								<!-- Score-->
								<div class="row mb-12">
									<div class="form-group col-md-6">
									<label asp-for="Score.Nickname">Nickname</label>
									<input asp-for="Score.Nickname" class="form-control">
									<span asp-validation-for="Score.Nickname" class="text-danger"></span>
									</div>
									<div class="form-group col-md-6">
										<label asp-for="Score.NumberOfMistakes">Nr of Mistakes</label>
										<input asp-for="Score.NumberOfMistakes" class="form-control">
										<span asp-validation-for="Score.NumberOfMistakes" class="text-danger"></span>
									</div>
								</div>
								<div class="row mb-12">
									<div class="form-group col-md-6">
										<label asp-for="Score.UxoMistakes">U.X.O. Mistakes</label>
										<input asp-for="Score.UxoMistakes" class="form-control">
										<span asp-validation-for="Score.UxoMistakes" class="text-danger"></span>
									</div>
									<div class="form-group col-md-6">
										<label asp-for="Score.PlayerScore">Score</label>
										<input asp-for="Score.PlayerScore" class="form-control">
										<span asp-validation-for="Score.PlayerScore" class="text-danger"></span>
									</div>
								</div>
							</div>
						</div>
					</div>
				<div class="col-xl-12">
							<div class="card mb-4">
								<div class="row gx-3 mb-3">
									<div class="form-group col md-6">
										<a asp-page="Index" class="btn btn-secondary" style="width:300px">Back</a>
									</div>
									<div class="form-group col md-6">
										@if (Model.Score.Score_ID != 0)
										{
											<button type="submit" class="btn btn-primary" style="float:right; width:300px">Update</button>
										}
										else
										{
											<button type="submit" class="btn btn-primary" style="float:right; width:300px">Add</button>
										}
									</div>
								</div>
							</div>
						</div>
				
	</form>
</div>

	@section Scripts{
		@{
		<partial name="_ValidationScriptsPartial" />
		}
	}
	


		