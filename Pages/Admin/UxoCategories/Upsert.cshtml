@page
@model Mined.Pages.Admin.UxoCategories.UpsertModel

<div class="container-xl px-4 mt-4">
	<div asp-validation-summary="All"></div>
		<form method="post">		
			<input hidden asp-for="Category.Category_ID" />
				<div class="col-xl-12">
					<h2 class="text-bg-primary pl-3">
					@(Model.Category.Category_ID != 0 ? "Update" : "Add") Category
					</h2>

					<!-- Add Category -->
					<div class="card mb-4">
						<div class="card-header">Category Information</div>
						<div class="card-body">

					<!-- NATO U.X.O. Categories-->
					<div class="row mb-12">
						<div class="form-group col-md-6">
							<label asp-for="Category.CategoryName">Category</label>
							<input asp-for="Category.CategoryName" class="form-control">
							<span asp-validation-for="Category.CategoryName" class="text-danger"></span>
						</div>
						
					</div>
						</div>
						</div>
					</div>
				<div class="col-xl-12">
							<div class="card mb-4">
								<div class="row gx-3 mb-3">
									<div class="form-group col md-6">
										<a asp-page="Index" class="btn btn-secondary" style="width:300px">Back</a>
									</div>
									<div class="form-group col md-6">
										@if (Model.Category.Category_ID != 0)
										{
											<button type="submit" class="btn btn-primary" style="float:right; width:300px">Update</button>
										}
										else
										{
											<button type="submit" class="btn btn-primary" style="float:right; width:300px">Add</button>
										}
									</div>
								</div>
							</div>
						</div>
				
	</form>
</div>

	@section Scripts{
		@{
		<partial name="_ValidationScriptsPartial" />
		}
	}
	


		