	@page
@model Mined.Pages.Admin.LeaderBoard.DeleteModel

		<form method="post">
	<input hidden asp-for="Score.Score_ID" />
			<div class="col-xl-12">

		<!-- Delete Score -->
				<div class="card mb-4">
					<div class="card-header">Delete Score </div>
					<div class="card-body">
				<h1> <Font color="Red">Are you sure that you want to delete this Score?</Font></h1>

				<!-- Score-->
						<div class="row mb-12">
							<div class="form-group col-md-6">
							<label asp-for="Score.Nickname">NickName</label>
							<input asp-for="Score.Nickname" disabled class="form-control">
							</div>
							<div class="form-group col-md-6">
							<label asp-for="Score.NumberOfMistakes">Nr of Mistakes</label>
							<input asp-for="Score.NumberOfMistakes" disabled class="form-control">
						    </div>
						</div>
						<div class="row mb-12">
							<div class="form-group col-md-6">
							<label asp-for="Score.UxoMistakes">U.X.O. Mistakes</label>
							<input asp-for="Score.UxoMistakes" disabled class="form-control">
							</div>
							<div class="form-group col-md-6">
							<label asp-for="Score.PlayerScore">Score</label>
							<input asp-for="Score.PlayerScore" disabled class="form-control">
							</div>
						</div>
					</div>
					</div>
				</div>
			
		
			<div class="col-xl-12">
						<div class="card mb-4">
							<div class="row gx-3 mb-3">
								<div class="form-group col md-6">
									<a asp-page="Index" class="btn btn-secondary" style="width:300px">Back</a>
								</div>
								<div class="form-group col md-6">
									<button type="submit" class="btn btn-primary" style="float:right; width:300px">Delete</button>
								</div>
							</div>
						</div>
					
			</div>
</form>

	@section Scripts{
		@{
		<partial name="_ValidationScriptsPartial" />
		}
	}
	

		